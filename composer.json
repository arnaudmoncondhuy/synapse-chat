{
    "name": "arnaudmoncondhuy/synapse-chat",
    "type": "symfony-bundle",
    "description": "Composant interface de chat pour Synapse — Contrôleur Stimulus avec streaming, points de terminaison API NDJSON et templates Twig intégrables.",
    "license": "PolyForm-Noncommercial-1.0.0",
    "keywords": ["symfony", "ai", "chat", "bundle", "stimulus", "ndjson", "streaming", "sse"],
    "authors": [
        {
            "name": "Arnaud Moncondhuy",
            "email": "arnaudmoncondhuy@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "arnaudmoncondhuy/synapse-core": "*@dev",
        "symfony/asset": "^7.0 || ^8.0",
        "symfony/asset-mapper": "^7.0 || ^8.0",
        "symfony/stimulus-bundle": "^2.0",
        "symfony/twig-bundle": "^7.0 || ^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "symfony/test-pack": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "ArnaudMoncondhuy\\SynapseChat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArnaudMoncondhuy\\SynapseChat\\Tests\\": "tests/"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": "true",
            "asset-mapper": {
                "paths": ["assets/"]
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
